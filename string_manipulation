#include<stdio.h>
#include<string.h>
main()
{
char str1[5],str2[50];
int ch,a,c;
while(1)
{
printf("1.strcpy \n2.strcat \n3.strcmp \n4.strlen \n5.exit \n");
printf("enter your option");
scanf("%d",&ch);
switch(ch)
{
case 1:
printf("enter the string1");
scanf("%s",str1);
printf("enter the string2");
scanf("%s",str2);
strcpy(str1,str2);
printf("string 1 :%s\n",str1);
printf("string 2 :%s\n",str2);
break;
case 2:
printf("enter the string1");
scanf("%s",str1);
printf("enter the string2");
scanf("%s",str2);
c=strcat(str1,str2);
printf("string 1 :%s\n",c);
break;
case 3:
printf("enter the string1");
scanf("%s",str1);
printf("enter the string2");
scanf("%s",str2);
a=strcmp(str1,str2);
printf("strcmp(str1,str2): %d\n",a);
break;
case 4:
printf("enter the string1");
scanf("%s",str1);
printf("string1 length :%d\n",strlen(str1));
break;
case 5:
exit(0);
break;
default :
printf("wrong option\n");
}
}
}

